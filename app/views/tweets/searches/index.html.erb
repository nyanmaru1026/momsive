<%= form_with(url: tweets_searches_path, local: true, method: :get, class: "search-form") do |form| %>
  <div class = "search">
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
  </div>
<% end %>
<% @tweets.each do |tweet| %>
  <div class = "contents-oya">
    <div class = "contents-center">
    <div class = "contents-name-date">
      <div class = "contents-name">
       <%= tweet.user.nickname %>   
      </div>
      <div class = "contents-date">
    <span data-livestamp="<%=tweet.updated_at.strftime("%Y/%m/%d %H:%M %Z")%>"></span>
      </div>
    </div>
      <div class = "contents-post">
        <%= link_to tweet.text, tweet_path(tweet.id), class: "content__right__top--title" %>
        <br>
        <% if tweet.image? %>
        <%= image_tag tweet.image.url %>
        <% end %>
      </div>
    <div class = "contents-side">
      <div class = "contents-side-left">
      </div>
      <div class = "contents-side-right">
      </div>
    </div>
</div>
<% end %>